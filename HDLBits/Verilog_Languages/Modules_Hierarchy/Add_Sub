module top_module(
    input [31:0] a,
    input [31:0] b,
    input sub,
    output [31:0] sum
);
    
    wire [31:0] b_sub;
    wire c1, cout;
    
    assign b_sub = b^{32{sub}};
    
    add16 inst0(a[15:0], b_sub[15:0], sub, sum[15:0], c1);
    add16 inst1(a[31:16], b_sub[31:16], c1, sum[31:16], cout);

endmodule
